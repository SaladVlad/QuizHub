# Copy this file to terraform.tfvars and customize values

resource_group_name = "quizhub-rg"
location            = "westeurope" # or "northeurope", "eastus", etc.
cluster_name        = "quizhub-aks"
kubernetes_version  = "1.28.3"
node_count          = 2
min_node_count      = 2
max_node_count      = 4
vm_size             = "Standard_B2s" # Cost effective: 2 vCPU, 4GB RAM
acr_name            = "quizhubacr123" # Must be globally unique, alphanumeric only

tags = {
  Environment = "Production"
  Project     = "QuizHub"
  ManagedBy   = "Terraform"
  Owner       = "YourName"
}
